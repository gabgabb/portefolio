{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "ignorePaths": [
        "strapi/**"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch",
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "prCreation": "not-pending"
        },
        {
          "matchPackageNames": [
            "pdfjs-dist",
            "react-pdf"
          ],
          "enabled": false
        }
    ],
    "dependencyDashboard": true
}
